<div class="body-container">
    
    <div class="row">

         <div class="container-fluid newsLogo justify-content-center">
             <h1>SAVED ARTICLES</h1>
             <br>
             <h2>You Saved Articles</h2>
         </div> 
        
    </div>
    
    <div class="row">
        <div >            
            <ol class="list-group">
                
                {{#each news}}
                   <div class="card">
                    <div class="card-header">
                       {{headline}}                        
                    </div>
                    <div class="card-body"  value = {{_id}}>
                        <p class="cardTitle">{{summary}}</p>
                        <a href="{{ url }}" target="_blank">More Information: {{ url }}</a>
                        <div class="btnGroup">
                            <button type="button"  class="button noteBtn" value = {{_id}}>Article Notes</button>
                            <button type="button"  class="button unsaveBtn" value = {{_id}}>Unsave Article</button>
                        </div> 
                    </div>
                    </div>
                {{/each}}             
               
            </ol>
        </div>
    
       
    </div>
  
</div>    

<div id="modal-note"  class="modal">
    <div class="modal-content">
      <h4>Notes for article : </h4>
          <div id=noteList>            
            {{!-- <ol class="list-group">                         
               
            </ol> --}}
         </div>

      <div class="notesGroup">        
        <input id='titleinput' placeholder="Note Title" name='title' >
        <textarea id='bodyinput' name='body' placeholder="Note Body"></textarea>
        <p id="inputMsg"></p>
        <button class="button" id='saveNote'>Save Note</button>
      </div> 
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-close waves-effect waves-green btn-flat">Close</a>
    </div>
  </div>